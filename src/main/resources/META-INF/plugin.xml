<idea-plugin>
    <id>com.rcvtestrunner.plugin</id>
    <name>RCV Test Runner</name>
    <vendor email="evgenii.truuts@ringcentral.com">Eugene Truuts</vendor>
    <version>1.4.4</version>

    <idea-version since-build="243" until-build="999.*"/>
    <description><![CDATA[
        <h2>Playwright Env Runner</h2>
        <p>
            A lightweight tool window for configuring and launching Playwright tests with full
            environment settings
        </p>
    ]]></description>

    <change-notes><![CDATA[
        <h3>1.0.0</h3>
        <ul>
            <li>Initial release</li>
            <li>Tool Window: PW Runner</li>
            <li>Full Playwright command builder</li>
        </ul>
    ]]></change-notes>
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="PW Runner"
                    anchor="right"
                    factoryClass="com.envrunner.EnvToolWindowFactory"/>
        <notificationGroup id="PW Runner" displayType="BALLOON" isLogByDefault="true"/>
    </extensions>
</idea-plugin>
